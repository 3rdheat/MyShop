@model IEnumerable<MyShop.Core.Models.Product>


@{
    ViewBag.Title = "Home Page";
}


@foreach(var item in Model) { 

<div class="col-md-3" style="height:450px;padding:5px;margin:5px;border:solid thin whitesmoke">
    <div class="col-md-3">
        <img class="img" style="height:250px;" src="~/Content/ProductImages/@item.Image" />
    </div>
    <div class="col-md-12" style="margin-top:15px;">
        <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
    </div>
    <div class="col-md-12" >
        <p style="font-size:small;font-style:italic; color:gray;">@item.Description</p>
    </div>
    <div class="col-md-12">
        <p style="color:mediumseagreen;">$@item.Price</p>
    </div>

    <div class="col-md-12">
        <a href="#" class="btn btn-sm btn-primary">Add to Basket</a>
    </div>

</div>

}

<div class="col-md-12 clearfix"/>
